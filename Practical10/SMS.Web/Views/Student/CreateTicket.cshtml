@model TicketViewModel

<h3 class="mt-4 mb-4">Create Ticket</h3>

<form asp-action="CreateTicket">
    <!-- add a hidden input for StudentId  -->  
    <!-- we hide the Model StudentId as its not user editable but needs to be in the form  -->
    <!-- to ensure the Ticket passed to the controller is complete. We also only collect   -->  
    <!-- Issue as CreatedOn and Active can be set in contoller before passing to service   -->  

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
   
    <!-- add a form group for Issue containing -->
    <!--     a label for Issue                 -->
    <!--     a textarea 5 rows for Issue       -->
    <!--     a validation span for Issue       -->
   
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary"/>
        <a class="btn btn-secondary" asp-action="Details" asp-route-id=@Model.StudentId>Cancel</a>
    </div>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}