<h5 class="mt-2 text-info">Modules</h5>

<table class="table table-striped table-sm">
    <thead class="thead-dark">
        <tr>
           <!-- <th class="w-50">Module</th>
            <th class="w-25">Grade</th>
            <th class="w-25">Actions</th> -->
            <th style="width: 55%">Module</th>
            <th style="width: 25%">Grade</th>
            <th style="width: 20%">Actions</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var sm in Model.StudentModules)
        {
            <tr>
                <!-- Module.Title is accessible as we included studentmodules and each related module in service -->
                <td>@sm.Module.Title</td>
                <td>@sm.Mark</td> 
                <td> 
                    <div class="d-inline-flex">
                        @if (User.IsInRole(Role.Admin.ToString()) || User.IsInRole(Role.Manager.ToString()))
                        {
                            <form asp-action="DeleteModule" asp-route-id="@sm.Id">
                                <button class="btn btn-link p-0 m-0" type="submit">
                                    <i class="material-icons" title="Remove Module">delete</i>
                                </button>
                            </form>
                            <a class="pl-2" asp-action="UpdateModule" asp-route-id="@sm.Id">
                                <i class="material-icons" title="Update Mark">edit</i>
                            </a>    
                        } 
                    </div>           
                </td>  
            </tr>
        }
    </tbody>
</table>
