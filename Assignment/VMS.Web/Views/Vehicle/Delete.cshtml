@model Vehicle

<h3>Delete Student</h3>
<h4>Are you sure you want to delete?</h4>

<div class="row">
    <div class="col-6">
        <!-- Image -->
        <img src="@Model.Photo" class="img-fluid" alt="Image of @Model.Make @Model.Model in @Model.Colour">
        <dl>
            <dt>Make</dt><dd>@Model.Make</dd>
            <dt>Model</dt><dd>@Model.Model</dd>
            <dt>Fuel Type</dt><dd>@Model.FuelType</dd>
        </dl>
    </div>

    <div class="col-6">
        <dl>
            <dt>Colour</dt><dd>@Model.Colour</dd>
            <dt>Registration Date</dt><dd>@Model.RegDate.ToShortDateString()</dd>
            <dt>Registration Number</dt><dd>@Model.RegNumber</dd>
            <dt>Age</dt><dd>@Model.Age</dd>
            <dt>Transmission Type</dt><dd>@Model.TransmissionType</dd>
            <dt>Co2 Rating</dt><dd>@Model.CO2Rating</dd>
            <dt>Body Type</dt><dd>@Model.BodyType</dd>
            <dt>Number of Doors</dt><dd>@Model.Doors</dd>
        </dl>
    </div> 
</div>
<div class="row">
    <form asp-action="ConfirmDelete">
        <input type="hidden" asp-for="Id" class="form-control"/>
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger"/>
            <a class="btn btn-secondary" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>
<div class="alert alert-danger" role="alert">
  All service records of this vehicle will also be deleted.
</div>

<!-- Partial To Render Service Record -->
<partial name="_Services" />