@model IList<Vehicle>


<h3>All Vehicles</h3>

<a class="material-icons" asp-action="Create">add_circle_outline</a>

<table class="table table-striped">
    <thead>
        <!-- Heading of table, Adjust based on how much is to be shown -->
        <tr>
            <th class="col-1"><a asp-action="Index" asp-route-orderBy="">Id</a></th>
            <th class="col-1"><a asp-action="Index" asp-route-orderBy="Make">Make</a></th>
            <th class="col-1"><a asp-action="Index" asp-route-orderBy="Model">Model</a></th>
            <th class="col-1"><a asp-action="Index" asp-route-orderBy="RegDate">Year</a></th>
            <th class="col-1"><a asp-action="Index" asp-route-orderBy="FuelType">Fuel Type</a></th>
            <th class="col-2 text-center">Image</th>
            <th class="col-2">Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model)
        {
            // Row Details
            <tr>
        
               <td>@v.Id</td>
               <td>@v.Make</td>
               <td>@v.Model</td>
               <td>@v.RegDate.Year</td>
               <td>@v.FuelType</td>
               
               <td>
                   <!-- Image -->
                   <img src="@v.Photo" class="img-fluid rounded mx-auto d-block img-table" alt="Image of @v.Make @v.Model in @v.Colour">
               </td>
               <td >
                   
                   <!-- Function Buttons --> 
                   <a class="material-icons p-1" asp-action="Details" asp-route-id=@v.Id>short_text</a>
                   <a class="material-icons p-1" asp-action="Edit" asp-route-id="@v.Id">create</a>
                   <a class="material-icons p-1" asp-action="Delete" asp-route-id="@v.Id">remove_circle_outline</a>
                   
               </td>
            </tr>
        }
    </tbody>
</table>