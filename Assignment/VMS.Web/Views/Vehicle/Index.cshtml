@model IList<Vehicle>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-asp-controller="Home" asp-action="Index" asp-route-orderBy="">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">Vehicles</li>
  </ol>
</nav>

<h3>All Vehicles</h3>

<a class="material-icons" asp-action="Create">add_circle_outline</a>

<table class="table table-striped">
    <thead>
        <!-- Heading of table, Adjust based on how much is to be shown -->
        <tr>
       
            <div class="col-1"><th><a asp-action="Index" asp-route-orderBy="">Id</a></th></div>
            <div class="col-1"><th><a asp-action="Index" asp-route-orderBy="Make">Make</a></th></div>
            <div class="col-1"><th><a asp-action="Index" asp-route-orderBy="Model">Model</a></th></div>
            <div class="col-1"><th><a asp-action="Index" asp-route-orderBy="RegDate">Year</a></th></div>
            <div class="col-1"><th><a asp-action="Index" asp-route-orderBy="FuelType">Fuel</a></th></div>
            <div class="col-4"><th class="text-center">Image</th></div>
            <div class="col-3"><th>Options</th></div>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model)
        {
            // Row Details
            <tr>
        
               <td>@v.Id</td>
               <td>@v.Make</td>
               <td>@v.Model</td>
               <td>@v.RegDate.Year</td>
               <td>@v.FuelType</td>
               
               <td>
                   <!-- Image -->
                   <img src="@v.Photo" class="img-fluid rounded mx-auto d-block img-table" alt="Image of @v.Make @v.Model in @v.Colour">
               </td>
               <td >
                   
                   <!-- Function Buttons --> 
                   <div class="row">
                    <div class="col-1"><a class="material-icons p-1" asp-action="Details" asp-route-id=@v.Id>short_text</a></div>
                    <div class="col-1"><a class="material-icons p-1" asp-action="Edit" asp-route-id="@v.Id">create</a></div>
                    <div class="col-1"><a class="material-icons p-1" asp-action="Delete" asp-route-id="@v.Id">remove_circle_outline</a></div>
                   </div>
               </td>
            </tr>
        }
    </tbody>
</table>