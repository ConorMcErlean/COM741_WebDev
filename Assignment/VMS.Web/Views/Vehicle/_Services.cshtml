@model Vehicle

<h3 class="mt-4 mb-4">Vehicle Services</h3>

<a class="material-icons" asp-action="AddService" asp-route-vehicleId="@Model.Id">add_circle_outline</a>

<table class="table table-sm">
    <thead>
        <tr>
            <th>Service ID</th>
            <th>Carried out by</th>
            <th>Date of Service</th>
            <th>Work Description</th>
            <th>Milage at Service</th>
            <th>Service Cost</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var S in Model.Services)
        {
            <tr>
                <td>@S.ServiceId</td>
                <td>@S.CarriedOutBy</td>
                <td>@S.DateOfService.ToShortDateString()</td>
                <td>@S.WorkDescription</td>
                <td>@S.CurrentMilage</td>
                <td>Â£@S.Cost</td>
                <td><a class="material-icons" asp-action="DeleteService" asp-route-id="@S.ServiceId">clear</a></td>

            </tr>
        }

    </tbody>
</table>

 @if (Model.Services.Count < 1)
        {
            <div>
                <h2>This Vehicle has not been serviced. </h2>
                <a class="btn btn-primary mb-3" asp-action="AddService">Add a Service Record</a>
            </div>
        }

