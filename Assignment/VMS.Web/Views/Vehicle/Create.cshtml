@Model Vehicle

<h3 class="mt-4 mb-4">Add a New Vehicle </h3>


<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    
        <div class="row">
        
            <!-- Make -->
            <div class="col-4">
                <div class="form-group">
                <label asp-for="Make" class="control-label"></label>
                <input asp-for="Make" class="form-control"/>
                <span asp-validation-for="Make" class="text-danger"></span>
                </div>
            </div>
            <!-- Model -->
            <div class="col-4">
                <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control"/>
                <span asp-validation-for="Model" class="text-danger"></span>
                </div>
            </div>
            <!-- Fuel Type -->
            <div class="col-4">
                <div class="form-group">
                <label asp-for="FuelType" class="control-label"></label>
                <input asp-for="FuelType" class="form-control"/>
                <span asp-validation-for="FuelType" class="text-danger"></span>
                </div>
            </div>

        </div>

        <div class="row">
            <!-- Colour -->
            <div class="col-4">
                <div class="form-group">
                <label asp-for="Colour" class="control-label"></label>
                <input asp-for="Colour" class="form-control"/>
                <span asp-validation-for="Colour" class="text-danger"></span>
                </div>
            </div>
            <!-- RegDate -->
            <div class="col-4">
                <div class="form-group">
                <label asp-for="RegDate" class="control-label"></label>
                <input asp-for="RegDate" class="form-control"/>
                <span asp-validation-for="RegDate" class="text-danger"></span>
                </div>
            </div>
            <!-- RegNumber -->
            <div class="col-4">
                <div class="form-group">
                <label asp-for="RegNumber" class="control-label"></label>
                <input asp-for="RegNumber" class="form-control"/>
                <span asp-validation-for="RegNumber" class="text-danger"></span>
                </div>
            </div>

        </div>
        <div class="row">
            <!-- Transmission Type -->
            <div class="col-3">
                <div class="form-group">
                <label asp-for="TransmissionType" class="control-label"></label>
                <input asp-for="TransmissionType" class="form-control"/>
                <span asp-validation-for="TransmissionType" class="text-danger"></span>
                </div>
            </div>
            <!-- CO2 Rating -->
            <div class="col-3">
                <div class="form-group">
                <label asp-for="CO2Rating" class="control-label"></label>
                <input asp-for="CO2Rating" class="form-control"/>
                <span asp-validation-for="CO2Rating" class="text-danger"></span>
                </div>
            </div>
            <!-- Body Type -->
            <div class="col-3">
                <div class="form-group">
                <label asp-for="BodyType" class="control-label"></label>
                <input asp-for="BodyType" class="form-control"/>
                <span asp-validation-for="BodyType" class="text-danger"></span>
                </div>
            </div>
            <!-- Doors -->
            <div class="col-3">
                <div class="form-group">
                <label asp-for="Doors" class="control-label"></label>
                <input asp-for="Doors" class="form-control"/>
                <span asp-validation-for="Doors" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
        <!-- Photo -->
        <div class="col-6">
                <div class="form-group">
                <label asp-for="Photo" class="control-label"></label>
                <input asp-for="Photo" class="form-control"/>
                <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
            </div>
        
        </div>


    <!-- Buttons -->
    <div class="form-group">
        <input type="sumbit" value="Create" class="btn btn-primary"/>
        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </div>
</form>