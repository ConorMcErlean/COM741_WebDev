@model Vehicle

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-asp-controller="Home" asp-action="Index" asp-route-orderBy="">Home</a></li>
    <li class="breadcrumb-item"><a asp-asp-controller="Vehicle" asp-action="Index" asp-route-orderBy="">Vehicles</a></li>
    <li class="breadcrumb-item active" aria-current="page">Details</li>
  </ol>
</nav>

<h3>Vehicle Details</h3>
<div class="row">
    <div class="col-3">
                <h5>Make:</h5><h3>@Model.Make</h3>
    </div>
    <div class="col-3">
                <h5>Model:</h5><h3>@Model.Model</h3>
    </div>
    <div class="col-3">
                <h5>Fuel Type:</h5><h3>@Model.FuelType</h3>
    </div>
    <div class="col-3">
                <h5> Colour: </h5><h3>@Model.Colour</h3>     
    </div>    
</div>
<div class="row"> </br> </div>
<div class="row">
    <div class="col-8">
        <!-- Image -->
        <img src="@Model.Photo" class="img-fluid rounded" alt="Image of @Model.Make @Model.Model in @Model.Colour">
    </div>

    <div class="col-4">
        <h4> Additional Info: </h4>
        <dl>
            <dt>Registration Date</dt>
            <dd>@Model.RegDate.ToShortDateString()</dd>

            <dt>Registration Number</dt>
            <dd>@Model.RegNumber</dd>

            <dt>Age</dt>
            <dd>@Model.Age</dd>

            <dt>Transmission Type</dt>
            <dd>@Model.TransmissionType</dd>

            <dt>Co2 Rating</dt>
            <dd>@Model.CO2Rating</dd>

            <dt>Body Type</dt>
            <dd>@Model.BodyType</dd>

            <dt>Number of Doors</dt>
            <dd>@Model.Doors</dd>
        </dl>
    </div>
    
</div>

