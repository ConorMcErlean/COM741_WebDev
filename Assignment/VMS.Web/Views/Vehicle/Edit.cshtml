@model VehicleViewModel

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-asp-controller="Home" asp-action="Index" asp-route-orderBy="">Home</a></li>
    <li class="breadcrumb-item"><a asp-asp-controller="Vehicle" asp-action="Index" asp-route-orderBy="">Vehicles</a></li>
    <li class="breadcrumb-item active" aria-current="page">Edit</li>
  </ol>
</nav>

<h3 class="mt-4 mb-4">Edit Vehicle </h3>


<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" class="form-control"/>

        <div class="row">
        
            <!-- Make -->
            <div class="col-md-4">
                <div class="form-group">
                <label asp-for="Make" class="control-label"></label>
                <input asp-for="Make" class="form-control"/>
                <span asp-validation-for="Make" class="text-danger"></span>
                </div>
            </div>
            <!-- Model -->
            <div class="col-md-4">
                <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control"/>
                <span asp-validation-for="Model" class="text-danger"></span>
                </div>
            </div>
             <!-- Colour -->
            <div class="col-md-4">
                <div class="form-group">
                <label asp-for="Colour" class="control-label"></label>
                <input asp-for="Colour" class="form-control"/>
                <span asp-validation-for="Colour" class="text-danger"></span>
                </div>
            </div>

        </div>

        <div class="row">
           <!-- RegNumber -->
            <div class="col-md-4">
                <div class="form-group">
                <label asp-for="RegNumber" class="control-label">Registration Number</label>
                <input asp-for="RegNumber" class="form-control"/>
                <span asp-validation-for="RegNumber" class="text-danger"></span>
                </div>
            </div>

            <!-- Fuel Type -->
            <div class="col-md-4">
                <div class="form-group">
                <label asp-for="FuelType" class="control-label">Fuel Type</label>
                <select asp-for="FuelType" class="form-control">
                    <option>Petrol</option>
                    <option>Diesel</option>
                    <option>Electric</option>
                    <option>Hybrid</option>
                    <option>Hydrogen</option>
                    <option>Other</option>
                </select>
                <span asp-validation-for="FuelType" class="text-danger"></span>
                </div>
            </div>

            <!-- Transmission Type -->
            <div class="col-md-4">
                <div class="form-group">
                <label asp-for="TransmissionType" class="control-label">Transmission Type</label>
                <select asp-for="TransmissionType" class="form-control">
                    <option>Manual</option>
                    <option>Automatic</option>
                    <option>Other</option>
                </select>
                <span asp-validation-for="TransmissionType" class="text-danger"></span>
                </div>
            </div>
            

        </div>
        <div class="row">
            <!-- RegDate -->
            <div class="col-6 col-md-3">
                <div class="form-group">
                <label asp-for="RegDate" class="control-label">Date of Registration</label>
                <input asp-for="RegDate" class="form-control"/>
                <span asp-validation-for="RegDate" class="text-danger"></span>
                </div>
            </div>

            <!-- CO2 Rating -->
            <div class="col-6 col-md-3">
                <div class="form-group">
                <label asp-for="CO2Rating" class="control-label">CO2 Rating</label>
                <input asp-for="CO2Rating" class="form-control"/>
                <span asp-validation-for="CO2Rating" class="text-danger"></span>
                </div>
            </div>
            <!-- Body Type -->
            <div class="col-6 col-md-3">
                <div class="form-group">
                <label asp-for="BodyType" class="control-label">Body Type</label>
                <input asp-for="BodyType" class="form-control"/>
                <span asp-validation-for="BodyType" class="text-danger"></span>
                </div>
            </div>
            <!-- Doors -->
            <div class="col-6 col-md-3">
                <div class="form-group">
                <label asp-for="Doors" class="control-label"></label>
                <input asp-for="Doors" class="form-control"/>
                <span asp-validation-for="Doors" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
        <!-- Photo -->
        <div class="col-12 col-md-6">
                <div class="form-group">
                <label asp-for="Photo" class="control-label"></label>
                <input asp-for="Photo" class="form-control"/>
                <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
            </div>
        
        </div>


    <!-- Buttons -->
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary"/>
        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </div>
</form>